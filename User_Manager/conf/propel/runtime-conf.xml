<?xml version="1.0" encoding="UTF-8"?>
<config>
	<!-- Uncomment this if you have PEAR Log installed
		  <log>
			<type>file</type>
			<name>/path/to/propel.log</name>
			<ident>propel-bookstore</ident>
			<level>7</level>
		  </log>
		  -->
	<propel>
		<datasources default="user_manager">
			<datasource id="user_manager">
				<adapter>mysql</adapter> <!-- sqlite, mysql, mssql, oracle, or pgsql -->
				<connection>
					<dsn>mysql:host=localhost;dbname=user_manager</dsn>
					<user>propel</user>
					<password>propel</password>
				</connection>
			</datasource>
		</datasources>
	</propel>
</config>